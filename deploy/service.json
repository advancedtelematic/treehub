{
  "id": "${JOB_NAME}",
  "uris": ["/root/docker.tar.gz"],
  "constraints": [["rack_id", "CLUSTER", "stateless"]],
  "cpus": ${CONTAINER_CPU},
  "mem": ${CONTAINER_MEM},
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "${IMAGE_ARTIFACT}",
      "parameters": [{"key": "log-driver", "value": "syslog"}],
      "forcePullImage": true,
      "network": "BRIDGE",
      "portMappings": [{
        "containerPort": 8084,
        "hostPort": 0,
        "protocol": "tcp"
      }]
    },
    "volumes": [{
      "containerPath": "/data",
      "hostPath": "/data/${JOB_NAME}",
      "mode": "RW"
    }]
  },
  "env": {
    "SERVICE_NAME": "${JOB_NAME}",
    "SERVICE_SCOPE": "${SERVICE_SCOPE}",
    "SERVICE_TYPE": "http",
    "SERVICE_IMAGE": "${IMAGE_ARTIFACT}",
    "SERVICE_HEALTH_CHECK": "curl --show-error --silent %<host>s:%<port>s/health",
    "BIND_HOST": "0.0.0.0",
    "BIND_PORT": "8084",
    "AUTH_PROTOCOL": "${AUTH_PROTOCOL}",
    "AUTH_VERIFICATION": "${AUTH_VERIFICATION}",
    "DB_MIGRATE": "true",
    "JAVA_OPTS": "${JAVA_OPTS}",
    "KAFKA_TOPIC_SUFFIX": "${KAFKA_TOPIC_SUFFIX}",
    "MESSAGING_MODE": "kafka"
  },
  "healthChecks": [{
    "protocol": "HTTP",
    "path": "/health",
    "intervalSeconds": 30
  }],
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "taskKillGracePeriodSeconds": 2
}
