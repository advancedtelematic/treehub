{
  "id": "${JOB_NAME}",
  "uris": ["/root/docker.tar.gz"],
  "constraints": [["rack_id", "CLUSTER", "${CLUSTER_CONSTRAINT}"]],
  "cpus": 0.2,
  "mem": ${CONTAINER_MEM},
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "${IMAGE_ARTIFACT}",
      "parameters": [{"key": "log-driver", "value": "syslog"}],
      "forcePullImage": true,
      "network": "BRIDGE",
      "portMappings": [{
        "containerPort": 8084,
        "hostPort": 0,
        "protocol": "tcp"
      }]
    },
    "volumes": [{
      "containerPath": "/data",
      "hostPath": "/data/${JOB_NAME}",
      "mode": "RW"
    }]
  },
  "env": {
    "SERVICE_NAME": "${JOB_NAME}",
    "SERVICE_SCOPE": "public",
    "SERVICE_TYPE": "http",
    "SERVICE_IMAGE": "${IMAGE_ARTIFACT}",
    "SERVICE_HEALTH_CHECK": "curl --show-error --silent %<host>s:%<port>s/health",
    "HOST": "0.0.0.0",
    "PORT": "8084",
    "AUTH_PROTOCOL": "oauth.accesstoken",
    "AUTH_VERIFICATION": "auth-plus",
    "DB_MIGRATE": "true",
    "TREEHUB_LOCAL_STORE_PATH": "/data/treehub-repos",
    "JAVA_OPTS": "${JAVA_OPTS}"
  },
  "healthChecks": [{
    "protocol": "HTTP",
    "path": "/health",
    "intervalSeconds": 30
  }],
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "taskKillGracePeriodSeconds": 2
}
